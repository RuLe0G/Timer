<Window x:Class="timer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:timer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="button" Content="Добавить" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="290" Height="400" Click="Button_Click"/>
        <Button Content="вывод" HorizontalAlignment="Left" Margin="706,196,0,0" VerticalAlignment="Top" Width="50" Height="28"/>
        <ListBox x:Name="Txt" HorizontalAlignment="Left" Height="400" Margin="305,10,0,0" VerticalAlignment="Top" Width="396" SelectionChanged="Txt_SelectionChanged">
            <StackPanel Orientation="Horizontal">
                <ListBoxItem Width="277"></ListBoxItem>
                <Button Content="Изменить"/>
                <Button Content="Удалить"/>            
            </StackPanel>
            
        </ListBox>

    </Grid>
</Window>
